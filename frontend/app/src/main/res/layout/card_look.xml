<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="220dp"
        android:layout_height="196dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activityImage11"
            android:layout_width="205dp"
            android:layout_height="142dp"
            android:layout_gravity="start|top|left"
            app:srcCompat="@drawable/animal" />


        <TextView
                android:id="@+id/activityName11"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:background="#F9F9F9"
                android:fontFamily="@font/poppins_medium"
                android:text="Road Trip"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/activityDate11"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|clip_horizontal|start|left"
                android:background="#F9F9F9"
                android:fontFamily="@font/poppins_medium"
                android:text="Thursday, May 5, 2022"
                android:textColor="#606065"
                android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>