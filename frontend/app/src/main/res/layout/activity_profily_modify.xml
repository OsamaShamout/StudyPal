                    android:id="@+id/linearInFrame1"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="bottom|end"
                    android:background="#F9F9F9"
                    android:backgroundTint="#F9F9F9"
                    android:elevation="0sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity1TextView"
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:background="#F9F9F9"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Road Trip"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/activityDate1P"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|clip_horizontal|start|left"
                        android:background="#F9F9F9"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Thursday, May 5, 2022"
                        android:textColor="#606065"
                        android:textSize="14sp" />
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="220dp"
                android:layout_height="196dp"
                app:layout_constraintBottom_toBottomOf="@+id/bottomNavMenu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.225"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.54">

