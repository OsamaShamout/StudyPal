                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|clip_horizontal|start|left"
                        android:background="#F9F9F9"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Thursday, May 5, 2022"
                        android:textColor="#606065"
                        android:textSize="14sp" />
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="220dp"
                android:layout_height="196dp"
                app:layout_constraintBottom_toBottomOf="@+id/bottomNavMenu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.225"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.54">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/activityImage3"
                    android:layout_width="205dp"
                    android:layout_height="142dp"
                    android:layout_gravity="center|start|top"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/roundedImageView"
                    app:srcCompat="@drawable/laulib" />

                <LinearLayout
                    android:id="@+id/linearInFrame3"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="bottom|end"
                    android:background="#F9F9F9"
                    android:backgroundTint="#F9F9F9"
                    android:elevation="0sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activityButton3"
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:background="#F9F9F9"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Road Trip"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/activityDate3P"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|clip_horizontal|start|left"
                        android:background="#F9F9F9"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Thursday, May 5, 2022"
                        android:textColor="#606065"
                        android:textSize="14sp" />
                </LinearLayout>
            </FrameLayout>


        </LinearLayout>

    </HorizontalScrollView>

    <ImageView
        android:id="@+id/notificationIndicator"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="282dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024"
        app:srcCompat="@drawable/notification_indicator" />

    <ImageButton

        android:id="@+id/notificationsButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/ripple"
        android:backgroundTint="#000A63"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_alert"
        tools:ignore="SpeakableTextPresentCheck" />

