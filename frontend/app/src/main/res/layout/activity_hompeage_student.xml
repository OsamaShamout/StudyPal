<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen_2"
    tools:context=".Homepage">


    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:onClick="logOut"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/log_out_white"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/greetingsMessage"
        android:layout_width="232dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="163dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/homepage_greetings2"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notificationsButton"
        app:layout_constraintVertical_bias="0.001" />

    <ImageButton

        android:id="@+id/notificationsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@android:drawable/stat_notify_chat"
        tools:ignore="SpeakableTextPresentCheck" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="300dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479"
        tools:ignore="SpeakableTextPresentCheck">


        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:tag="num1">


                <TextView
                    android:id="@+id/activityTextView1"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:background="#F9F9F9"
                    android:fontFamily="@font/poppins_medium"
                    android:onClick="OnClickOpenActivity"
                    android:tag="txt_n_1"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activityDate1"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|clip_horizontal|start|left"
                    android:background="#F9F9F9"
                    android:fontFamily="@font/poppins_medium"
                    android:tag="txt_d_1"
                    android:textColor="#606065"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:tag="num2">

                <TextView
                    android:id="@+id/activityTextView2"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:background="#F9F9F9"
                    android:fontFamily="@font/poppins_medium"
                    android:onClick="OnClickOpenActivity"
                    android:tag="txt_n_2"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activityDate2"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|clip_horizontal|start|left"
                    android:background="#F9F9F9"
                    android:fontFamily="@font/poppins_medium"
                    android:onClick="OnClickOpenActivity"
                    android:tag="txt_d_2"
                    android:textColor="#606065"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:tag="num3">


                <TextView
                    android:id="@+id/activityTextView3"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:background="#F9F9F9"
                    android:fontFamily="@font/poppins_medium"
                    android:onClick="OnClickOpenActivity"
                    android:tag="txt_n_3"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activityDate3"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|clip_horizontal|start|left"
                    android:background="#F9F9F9"
                    android:fontFamily="@font/poppins_medium"
                    android:onClick="OnClickOpenActivity"
                    android:tag="txt_d_3"
                    android:textColor="#606065"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavMenu"
        android:layout_width="410dp"
        android:layout_height="75dp"
        android:background="#FFFFFF"
        app:itemIconSize="24dp"
        app:itemIconTint="#BAB9D0"
        app:itemPaddingBottom="0dp"
        app:itemPaddingTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/nav_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:id="@+id/assignedTasks"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Assigned Tasks:"
        android:textColor="#4F4F4F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <Button
        android:id="@+id/viwStudentActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Section Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.746" />

    <Button
        android:id="@+id/viewStudentActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Student Activity"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="574dp" />


</androidx.constraintlayout.widget.ConstraintLayout>